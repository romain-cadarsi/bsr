{% extends 'base.html.twig' %}
{% block css %}
    {{ parent() }}
    <style>


    </style>
{% endblock %}
{% block content %}
    <section id="page-title" class="text-light" style="background-image:url('{{ asset('websiteImage/realisation.jpg') }}'); background-size: cover; background-position: center center;">
        <div class="bg-overlay"></div>
        <div class="container">
            <div class="page-title">
                <h1>Nos réalisations</h1>
                {% if generalS.imageAccueil.texteRealisations != null or generalS.imageAccueil.texteRealisations != '' %}<p class="slider-text"> {{ generalS.imageAccueil.texteRealisations }}</p>{% endif %}
            </div>
        </div>
    </section>
    <section id="prestation" class="pt-0 pb-1">
        <div class="container">
            {#            Debut grid#}
            <div class="grid-filter text-center mt-5 mb-5" data-layout="#realisations" data-animate="fadeInUp" data-animate-delay="0">
                <ul>

                    <li class="" id="tous"><a href="#" data-category="*"> Toutes les Réalisations</a></li>
                    {% for categorie in categories %}
                    <li class="" id="{{ categorie.id }}"><a data-category=".{{ categorie.id }}" href="#">{{ categorie.titre }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div id="realisations"  data-lightbox="gallery" class="grid-layout grid-3-columns grid-loaded" data-margin="30" data-margin-xs="10" data-item="grid-item" data-layout="fitRows" data-animate="fadeInUp" data-animate-delay="0">
                {% for realisation in realisations %}
                    <div class="grid-item {{ realisation.type.id }}">
                        <div class="grid-item-wrap m-4" style="height: 200px;">
                            <a href="{{ path('realisationAjax',{'realisation' : realisation.id}) }}" data-lightbox="ajax" style="height: 200px;"><div class="grid-image background-image rounded" style="height: 200px; background-image: url('{{ asset('images/upload/' ~ realisation.image) }}') ; background-size: contain">
                                </div></a>
                        </div>
                        <div class="text-center">
                            <h4>{{ realisation.titre }}</h4>
                            <p>{{ realisation.adresse }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {#            endGrid #}

        </div>
    </section>

    {% include('composantsPages/ilsNousFontConfiance.html.twig') %}
    <section class="pt-0 text-center">
        <a href="{{ path('contact') }}" class="btn btn-lg btn-success" data-animate="fadeInUp" data-animate-delay="600">Demande de devis express</a>
    </section>
{% endblock %}

    {% block js  %}
        {{ parent() }}
    {% endblock %}

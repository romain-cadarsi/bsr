    {% extends 'base.html.twig' %}
{% block css %}
    {{ parent() }}
    <style>


    </style>
{% endblock %}
{% block content %}
    <section id="page-title" class="text-light" style="background-image:url({{ asset('websiteImage/news.jpg') }}); background-size: cover; background-position: center center;">
        <div class="bg-overlay"></div>
        <div class="container">
            <div class="page-title">
                <h1>Nos Actualit√©s</h1>
                {% if generalS.imageAccueil.texteActualites != null or generalS.imageAccueil.texteActualites != '' %}<p class="slider-text"> {{ generalS.imageAccueil.texteActualites }}</p>{% endif %}
            </div>
        </div>
    </section>
    <section id="page-content">
        <div class="container">


            <div id="article" class="grid-layout post-3-columns m-b-30" data-item="post-item">

                {% for article in articles %}
                    <div class="post-item border">
                        <div class="post-item-wrap">
                            <div class="post-image"> <a href="{{ path('actualite',{'id' : article.id}) }}"> <img alt="" src="{{ asset('images/upload/' ~ article.image) }}"> </a></div>
                            <div class="post-item-description"> <span class="post-meta-date"><i class="fa fa-calendar-o"></i>{{ article.date | date('M d, Y') }}</span>
                                <h2><a href="{{ path('actualite',{'id' : article.id}) }}">{{ article.titre }}</a></h2>
                                <div> {{ article.displayContent | u.truncate( 200, '...', false) |replace({'<div>': '', '</div>': ""}) | raw}} </div>
                                <a href="{{ path('actualite',{'id' : article.id}) }}" class="item-link">Lire plus <i class="icon-chevron-right"></i></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}



            </div>



        </div>

    </section>
{% endblock %}

    {% block js  %}
        {{ parent() }}
    {% endblock %}
